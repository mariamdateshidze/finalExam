<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FAF3F4"
    tools:context=".appActivity">
    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="200dp"
        android:layout_marginTop="50dp"
        android:layout_marginStart="100dp"
        android:layout_height="200dp"
        android:src="@mipmap/lg"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/sajaro"
        android:layout_width="350dp"
        android:layout_marginStart="30dp"
        android:textColor="#000000"
        android:layout_marginTop="100dp"
        android:background="@drawable/button"
        android:layout_height="60dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:text="სახელმწიფო უნივერსიტეტები"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/kerdzo"
        android:layout_width="350dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/button"
        android:textColor="#000000"
        android:layout_height="60dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:text="კერძო უნივერსიტეტები"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/gacvliti"
        android:layout_width="350dp"
        android:layout_marginStart="30dp"
        android:textColor="#000000"
        android:layout_marginTop="10dp"
        android:background="@drawable/button"
        android:layout_height="70dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:text="გაცვლითი პროგრამები სტუდენტებისთვის"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/samagistro"
        android:layout_width="350dp"
        android:layout_marginStart="30dp"
        android:textColor="#000000"
        android:layout_marginTop="10dp"
        android:background="@drawable/button"
        android:layout_height="70dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:text="სამაგისტრო პროგრამები საზღვარგარეთ"/>



</androidx.appcompat.widget.LinearLayoutCompat>